<nav class="flex justify-between p-1 bg-gradient-to-r from-lime-600 to-blue-600 relative">
    <a href="/" class="flex">
        <img src="/images/logo.png" alt="app logo" class="w-16 h-16">
        <div class="text-white text-4xl font-bold flex items-center tracking-wide mx-2">
            BlogPress
        </div>
    </a>
    <div class="flex items-center mx-2 text-white">
        <button id="sun" class="hover:text-yellow-300" onclick="setLightTheme()">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z" />
            </svg>
        </button>
        <button id="moon" class="hover:text-slate-300 hidden" onclick="setDarkTheme()">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z" />
            </svg>
        </button>
        {{#if logged}}
        <a href="/account">
            <button class="bg-lime-600 hover:bg-lime-400 {{#if account}}border-fuchsia-700{{/if}} border-2 border-yellow-600 hover:border-yellow-400 rounded-lg mr-2 ml-2 px-2 py-1 text-lg">
                Account
            </button>
        </a>
        <a href="/account/logout">
            <button class="bg-lime-600 hover:bg-lime-400 border-2 border-yellow-600 hover:border-yellow-400 rounded-lg mr-2 ml-2 px-2 py-1 text-lg">
                Log out
            </button>
        </a>
        {{else}}
        <a href="/account/login">
            <button class="bg-lime-600 hover:bg-lime-400 {{#if login}}border-fuchsia-700{{/if}} border-2 border-yellow-600 hover:border-yellow-400 rounded-lg mr-2 ml-2 px-2 py-1 text-lg">
                Sign in
            </button>
        </a>
        <a href="/account/register">
            <button class="bg-lime-600 hover:bg-lime-400 {{#if register}}border-fuchsia-700{{/if}} border-2 border-yellow-600 hover:border-yellow-400 rounded-lg px-2 py-1 text-lg">
                Sign up
            </button>
        </a>
        {{/if}}
    </div>
</nav>
